#include<iostream>
using namespace std;
int count1 = 0;
int main() {
    void fun(int, int, int, int*);
    void display(int, int);
    int count, m, n, num[50] = { 0 };
    cin >> count;
    while (count--) {
        cin >> m >> n;
        fun(m, 0, n, num);
        cout << count1 << endl;
        count1 = 0;
    }
}
void fun(int m, int depth, int n, int *num) {
    void display(int, int);
    if (m == 0) {
        display(n, depth);
    }
    else {
        for (int i = m; i >= 1; i--) {
            if (depth == 0 || i <= num[depth - 1]) {
                num[depth] = i;
                fun(m - i, depth + 1, n, num);
            }
        }
    }
}
void display(int n, int depth) {
    if (depth <= n) {
        count1++;
    }
}                                 
